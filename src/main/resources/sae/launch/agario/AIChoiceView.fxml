<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="AIChoiceBorderPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sae.launch.agario.controllers.AIChoiceController">

    <!-- Barre d'outils en haut -->
    <top>
        <ToolBar prefHeight="40.0">
            <items>
                <Button onAction="#onMenuButton" style="-fx-background-color: #ffcc00; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 15px;" text="Menu Principal" />
                <Button onAction="#onQuitButton" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15px;" text="Quitter" />
            </items>
        </ToolBar>
    </top>
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
              <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20; -fx-background-color: rgba(0,0,0,0.6)">
                  <children>
                      <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;">
                     <children>
                        <Button  onAction="#onRandomAIPlusButton" mnemonicParsing="false" text="+" />
                        <Label text="IA aléatoire" />
                        <Label fx:id="randomAI" text="0" />
                        <Button onAction="#onRandomAIMinusButton" mnemonicParsing="false" text="-" />
                     </children></VBox>
                      <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;">
                     <children>
                        <Button onAction="#onPelletAIPlusButton" mnemonicParsing="false" text="+" />
                        <Label text="IA récoleuse" />
                        <Label fx:id="pelletAI" text="0" />
                        <Button onAction="#onPelletAIMinusButton" mnemonicParsing="false" text="-" />
                     </children></VBox>
                  <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;">
                     <children>
                        <Button onAction="#onChaserAIPlusButton" mnemonicParsing="false" text="+" />
                        <Label text="IA chasseuse" />
                        <Label fx:id="chaserAI" text="0" />
                        <Button onAction="#onChaserAIMinusButton" mnemonicParsing="false" text="-" />
                     </children></VBox>
                  </children>
              </HBox>
                <Button onAction="#onSoloPlayButton" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15px;" text="Lancer la partie" StackPane.alignment="BOTTOM_CENTER">
               <StackPane.margin>
                  <Insets bottom="50.0" />
               </StackPane.margin></Button>
         </children>
      </StackPane>
   </center>
</BorderPane>
